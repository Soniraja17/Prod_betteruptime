{
    "compilerOptions": {
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "ESNext",
      "moduleDetection": "force",
      "allowJs": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "verbatimModuleSyntax": true,
      "noEmit": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["bun-types"]
    },
    "include": ["./**/*.ts", "./**/*.tsx"],
    "exclude": ["node_modules"]
  }